<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5dip"
    app:cardElevation="@dimen/_5dip"
    app:cardBackgroundColor="@color/e_blue_color"
    android:layout_margin="@dimen/_4dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5dip"
        android:padding="@dimen/_4dip">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dip"
        android:padding="@dimen/_2dip"
        android:layout_marginHorizontal="@dimen/_5dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click To Add Lables"
            android:layout_gravity="center"
            android:background="@drawable/btn_border_shape"
            android:paddingVertical="@dimen/_6dp"
            android:paddingHorizontal="@dimen/_4dip"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/_14sp"/>
        <TextView
            android:id="@+id/ivEditLead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_round_shape_white"
            android:backgroundTint="@color/colorPrimary"
            android:text="Lead Edit"
            android:textColor="@color/white"
            android:padding="@dimen/_4dip"
            android:layout_marginStart="@dimen/_5dip" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lables "
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_round_shape_white"
            android:backgroundTint="@color/gray"
            android:paddingVertical="@dimen/_6dp"
            android:paddingHorizontal="@dimen/_4dip"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/_14sp"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNameFirstLatter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="L"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimary"
                android:paddingVertical="@dimen/_6dp"
                android:paddingHorizontal="@dimen/_4dip"
                android:textColor="@color/white"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_18sp"/>
            <TextView
                android:id="@+id/tvClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lables "
                android:layout_toRightOf="@+id/tvNameFirstLatter"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp"/>
            <TextView
                android:id="@+id/tvClientNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lables "
                android:layout_toRightOf="@+id/tvNameFirstLatter"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@+id/tvClient"
                android:layout_marginStart="@dimen/_10dp"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_12sp"/>
            <ImageView
                android:id="@+id/ivUpdate"
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:src="@drawable/ic_baseline_edit_note_24"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5dip"
                android:layout_marginStart="@dimen/_5dip" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead ID : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp"/>

            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp"/>

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEP : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tvmep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:padding="@dimen/_2dip"
            android:layout_marginHorizontal="@dimen/_5dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tvLeadDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="@dimen/_10dp"
                android:layout_below="@+id/tvDate"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_14sp"
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

</layout>