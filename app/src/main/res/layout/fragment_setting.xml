<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_5dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dip"
            android:background="@drawable/btn_round_shape_white"
            android:elevation="@dimen/_6dp"
            android:padding="@dimen/_4dip">

            <RelativeLayout
                android:id="@+id/rlVerify"
                android:layout_width="@dimen/_70dip"
                android:layout_height="@dimen/_70dip"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4dip"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/circle_stroke"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="@dimen/_70dip"
                    android:layout_height="@dimen/_70dip"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_4dip"
                    android:layout_marginTop="@dimen/_4dip"
                    android:layout_marginEnd="@dimen/_4dip"
                    android:layout_marginBottom="@dimen/_4dip"
                    android:clickable="true"
                    android:foreground="@drawable/ripple_circle"
                    android:src="@drawable/add_file" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_toRightOf="@+id/rlVerify"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/_2dip"
                android:text="Full Name "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tvMobNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@+id/rlVerify"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/_2dip"
                android:text="Full Name "
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMobNo"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@+id/rlVerify"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/_2dip"
                android:text="Full Name "
                android:textSize="@dimen/_12sp" />

            <ImageView
                android:id="@+id/ivEditProfile"
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4dip"
                android:layout_marginTop="@dimen/_4dip"
                android:layout_marginEnd="@dimen/_4dip"
                android:layout_marginBottom="@dimen/_4dip"
                android:background="@drawable/circle"
                android:backgroundTint="@color/e_blue_color"
                android:clickable="true"
                android:foreground="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@drawable/btn_round_shape_white"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_4dip">

            <ImageView
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/baseline_person_24"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/_4dip"
                android:text="My Profile"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:layout_width="@dimen/_20dip"
                android:layout_height="@dimen/_20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4dip"
                android:layout_marginTop="@dimen/_4dip"
                android:layout_marginEnd="@dimen/_4dip"
                android:layout_marginBottom="@dimen/_4dip"
                android:background="@drawable/circle"
                android:backgroundTint="@color/e_blue_color"
                android:clickable="true"
                android:foreground="@drawable/ic_baseline_keyboard_arrow_right_24" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dip"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@color/e_blue_color" />

        <LinearLayout
            android:id="@+id/llChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@drawable/btn_round_shape_white"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_4dip">

            <ImageView
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_lock_24"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/_4dip"
                android:text="Change Password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:layout_width="@dimen/_20dip"
                android:layout_height="@dimen/_20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4dip"
                android:layout_marginTop="@dimen/_4dip"
                android:layout_marginEnd="@dimen/_4dip"
                android:layout_marginBottom="@dimen/_4dip"
                android:background="@drawable/circle"
                android:backgroundTint="@color/e_blue_color"
                android:clickable="true"
                android:foreground="@drawable/ic_baseline_keyboard_arrow_right_24" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dip"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@color/e_blue_color" />

        <LinearLayout
            android:id="@+id/llLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@drawable/btn_round_shape_white"
            android:backgroundTint="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/_4dip">

            <ImageView
                android:layout_width="@dimen/_30dip"
                android:layout_height="@dimen/_30dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:padding="@dimen/_4dip"
                android:src="@drawable/ic_logout_24"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@+id/ivImage"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingVertical="@dimen/_4dip"
                android:text="Logout"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sp" />

            <ImageView
                android:layout_width="@dimen/_20dip"
                android:layout_height="@dimen/_20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4dip"
                android:layout_marginTop="@dimen/_4dip"
                android:layout_marginEnd="@dimen/_4dip"
                android:layout_marginBottom="@dimen/_4dip"
                android:background="@drawable/circle"
                android:backgroundTint="@color/e_blue_color"
                android:clickable="true"
                android:foreground="@drawable/ic_baseline_keyboard_arrow_right_24" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dip"
            android:layout_marginTop="@dimen/_5dip"
            android:background="@color/colorPrimary"
            android:visibility="gone" />
    </LinearLayout>
</layout>