<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--  lead id, source, plumber, architect, client, lead date-->
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5dip"
        app:cardElevation="@dimen/_5dip"
        app:cardBackgroundColor="@color/v_blue_color"
        android:layout_margin="@dimen/_4dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5dip"
            android:padding="@dimen/_4dip">

            <TextView
                android:id="@+id/tvClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweets"
                android:layout_marginTop="@dimen/_4dip"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black" />
<ImageView
    android:id="@+id/ivEditClient"
    android:layout_width="@dimen/_24dip"
    android:layout_height="@dimen/_24dip"
    android:src="@drawable/ic_baseline_edit_note_24"
    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>